<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEFF1"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/outer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_A1_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Team a"
                android:textAllCaps="true"
                android:textColor="#616161"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_A2_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="0"
                android:textColor="#000000"
                android:textSize="56sp" />

            <Button
                android:id="@+id/button_A1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="oneRun_A"
                android:text="+1 Runs"
                android:textSize="16sp" />

            <Button
                android:id="@+id/button_A2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="fourRun_A"
                android:text="+4 Runs"
                android:textSize="16sp" />

            <Button
                android:id="@+id/button_A3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="sixRun_A"
                android:text="+6 runs"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_A4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="playerOut_A"
                android:text="player out"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/text_A_player_left1_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Players Left"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_A_player_left2_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="10"
                android:textColor="#000000"
                android:textSize="26sp" />

        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="30dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_B1_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Team a"
                android:textAllCaps="true"
                android:textColor="#616161"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_B2_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="0"
                android:textColor="#000000"
                android:textSize="56sp" />

            <Button
                android:id="@+id/button_B1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="oneRun_B"
                android:text="+1 Runs"
                android:textSize="16sp" />

            <Button
                android:id="@+id/button_B2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="fourRun_B"
                android:text="+4 Runs"
                android:textSize="16sp" />

            <Button
                android:id="@+id/button_B3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="sixRun_B"
                android:text="+6 runs"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_B4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="playerOut_B"
                android:text="player out"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/text_B_player_left1_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Players Left"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_B_player_left2_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="10"
                android:textColor="#000000"
                android:textSize="26sp" />


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:onClick="_reset"
        android:text="reset"
        android:textSize="18sp" />

</RelativeLayout>